<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.magic.wdl.dialogdemo.MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/setview_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:text="Builder#setview实现自定义样式的dialog"
        android:background="@color/keyguard_text_color_unlock"/>

    <TextView
        android:id="@+id/oncreateview_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:text="重写onCreateView实现自定义样式的dialog"
        android:background="@color/keyguard_text_color_unlock"/>

    <TextView
        android:id="@+id/show_as_dialog_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:text="DialogFragment作为Dialog展示"
        android:background="@color/keyguard_text_color_unlock"/>

    <TextView
        android:id="@+id/show_as_fragment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:text="DialogFragment作为Fragment展示"
        android:background="@color/keyguard_text_color_unlock"/>

    <TextView
        android:id="@+id/activity_as_dialog_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:text="Activity作为Dialog展示"
        android:background="@color/keyguard_text_color_unlock"/>
</LinearLayout>
